# Database configuration
# For development with SQLite
DATABASE_URL="file:./prisma/dev.db"
# For production with PostgreSQL
# DATABASE_URL="postgresql://lifenavigator:lifenavigator_password@db.example.com:5432/lifenavigator?schema=public"
# For Vercel Postgres with connection pooling
# DIRECT_URL="postgresql://lifenavigator:lifenavigator_password@db.example.com:5432/lifenavigator?schema=public"

# NextAuth configuration
NEXTAUTH_SECRET="your-secret-key-should-be-at-least-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
# Google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# Twitter
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""
# Facebook
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# AWS Configuration for Secure Document Vault
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
S3_BUCKET_NAME="lifenavigator-documents"

# Security and Encryption
# Document Encryption Key (minimum 32 characters for AES-256)
DOCUMENT_ENCRYPTION_KEY="replace-with-a-secure-key-minimum-32-chars"
# Field-level Encryption (for sensitive database fields)
ENABLE_FIELD_ENCRYPTION="false"
ENCRYPTION_MASTER_KEY="replace-with-a-secure-key-minimum-32-chars"
ENCRYPTION_SALT="random-salt-value-for-encryption"

# API Base URL (for Vercel deployment)
API_BASE_URL="https://your-vercel-app.vercel.app/api"

# Environment settings
NODE_ENV="development"
LOG_LEVEL="info"
SKIP_ENV_VALIDATION="false"